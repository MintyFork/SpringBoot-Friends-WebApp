<!-- Tu zaczyna się skrypt odpowiadający za wykres dziennych odwiedzin Chart.js -->
<script>
var ctx = document.getElementById('myAreaChart').getContext('2d');
var chart = new Chart(ctx, {
    // The type of chart we want to create
    type: 'line',

    // The data for our dataset
    data: {
        labels: ['Poniedziałek', 'Wtorek', 'Środa', 'Czwartek', 'Piątek', 'Sobota', 'Niedziela'],
        datasets: [{
            label: 'Wyświetlenia',
            backgroundColor: 'rgba(78, 115, 223, 0.05)',
            borderColor: 'rgba(78, 115, 223, 1)',
            data: [2, 20, 54, 21, 100, 41, 82]
        }]
    },

    // Configuration options go here
    options: {}
});

//Tutaj jest funkcja która aktualizuje dane, w tym przpadku randomowe. 
function updateChart() {
	chart.data.datasets[0].data = [Math.floor(Math.random() * 101), Math.floor(Math.random() * 101), Math.floor(Math.random() * 101), Math.floor(Math.random() * 101), Math.floor(Math.random() * 101), Math.floor(Math.random() * 101), Math.floor(Math.random() * 101)];
	chart.update();
}

//Funkcja zapisu wykresu uzywam dwóch bibliotek FileSaver i Canvas-toBlob
$("#save-btn").click(function(){
	$("#myAreaChart").get(0).toBlob(function(blob){
		saveAs(blob, "chart_1.png")
	});
});
</script>

